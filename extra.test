def sum2(a, b) { return a + b; }
def gcd(a, b) { 
	if(a < b) { tmp = a; a = b; b = tmp; } 
	while(b != 0){
		tmp = a mod b;
		a = b;
		b = tmp;
	}
	write( a);
}

